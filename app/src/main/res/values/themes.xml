<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Note: We could've used android:attr/isLightTheme, but in some devices it's not working as expected -->
    <style name="NightAdjusted.Theme.Limita.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="windowSplashScreenBackground">@color/splash_screen_background_light</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="31">@drawable/branding_image_light</item>
    </style>

    <style name="Theme.Limita.Splash" parent="NightAdjusted.Theme.Limita.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Limita</item>
    </style>

    <style name="NightAdjusted.Theme.Limita" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Limita" parent="NightAdjusted.Theme.Limita" />
</resources>
